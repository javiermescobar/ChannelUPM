<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_back_button"
            android:layout_marginStart="@dimen/smallest_margin"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="@dimen/fragment_logo_width"
            android:layout_height="@dimen/fragment_logo_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo"
            android:layout_marginEnd="@dimen/smallest_margin"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <TextView
            android:id="@+id/title_text"
            style="@style/default_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_image"
            android:gravity="center"
            android:text="@string/add_participant"
            android:textSize="@dimen/normal_text"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_input"
            android:layout_width="@dimen/login_text_width"
            android:layout_height="@dimen/login_text_height"
            android:layout_below="@id/title_text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_input_box"
            android:hint="@string/search_contact"
            style="@style/default_text"
            android:padding="@dimen/smallest_margin"
            android:drawableEnd="@drawable/ic_search"/>

        <View
            android:id="@+id/search_input_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_input"
            android:background="@color/orange"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_input_separator"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:lottie_rawRes="@raw/loading"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"/>

    </RelativeLayout>
</layout>