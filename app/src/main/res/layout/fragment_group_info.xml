<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/transparent"
            android:src="@drawable/ic_back_button"
            android:layout_marginStart="@dimen/smallest_margin"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="@dimen/fragment_logo_width"
            android:layout_height="@dimen/fragment_logo_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo"
            android:layout_marginEnd="@dimen/smallest_margin"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <TextView
            android:id="@+id/title_text"
            style="@style/default_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/group_info"
            android:textSize="@dimen/normal_text"
            app:layout_constraintTop_toBottomOf="@+id/back_button"
            android:layout_marginTop="@dimen/small_margin"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/group_image"
            android:layout_width="@dimen/contact_info_image_size"
            android:layout_height="@dimen/contact_info_image_size"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparent"
            android:src="@drawable/user_default"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/group_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/group_image"
            android:background="@drawable/rounded_input_box"
            android:padding="@dimen/smallest_margin"
            android:textSize="@dimen/small_text"
            style="@style/default_text"
            android:text="Nombre de grupo"
            android:layout_marginStart="@dimen/smallest_margin"
            android:layout_marginEnd="@dimen/smallest_margin"
            android:layout_marginTop="@dimen/small_margin"/>

        <EditText
            android:id="@+id/group_descrition_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/max_info_height"
            app:layout_constraintTop_toBottomOf="@id/group_name_text"
            android:background="@drawable/rounded_input_box"
            android:padding="@dimen/smallest_margin"
            android:textSize="@dimen/small_text"
            style="@style/default_text"
            android:text="DescripciÃ³n de grupo"
            android:layout_marginStart="@dimen/smallest_margin"
            android:layout_marginEnd="@dimen/smallest_margin"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/group_participants_button"
            android:layout_width="@dimen/login_register_button_width"
            android:layout_height="@dimen/login_register_button_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/exit_group_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_button"
            android:padding="@dimen/smallest_margin"
            android:textSize="@dimen/smallest_text"
            style="@style/default_text"
            android:text="@string/participants"
            android:layout_marginBottom="@dimen/default_margin"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exit_group_button"
            android:layout_width="@dimen/login_register_button_width"
            android:layout_height="@dimen/login_register_button_height"
            app:layout_constraintStart_toEndOf="@id/group_participants_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_button"
            android:padding="@dimen/smallest_margin"
            android:textSize="@dimen/smallest_text"
            style="@style/default_text"
            android:text="@string/exit_group"
            android:layout_marginBottom="@dimen/default_margin"
            android:enabled="false"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/loading"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>