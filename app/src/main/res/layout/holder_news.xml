<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/rounded_button">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Tíulo noticia"
            android:textSize="@dimen/normal_text"
            style="@style/default_text"
            android:layout_marginStart="@dimen/smallest_margin"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <ImageButton
            android:id="@+id/edit_news_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/smallest_margin"
            android:layout_marginEnd="@dimen/smallest_margin"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            android:text="Categoría"
            android:textSize="@dimen/small_text"
            style="@style/default_text"
            android:layout_marginStart="@dimen/smallest_margin"
            android:layout_marginBottom="@dimen/smallest_margin"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/category_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Ejemplo de texto largo que describe una noticia"
            android:textSize="@dimen/smallest_text"
            style="@style/default_text"
            android:layout_marginStart="@dimen/smallest_margin"
            android:layout_marginEnd="@dimen/smallest_margin"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="11/11/11"
            android:textSize="@dimen/smallest_text"
            style="@style/default_text"
            android:layout_marginEnd="@dimen/smallest_margin"
            android:layout_marginBottom="@dimen/smallest_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>