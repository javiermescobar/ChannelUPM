<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/view_1"
            app:layout_constraintBottom_toBottomOf="@id/view_5"
            android:background="?attr/colorPrimaryVariant"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo_image"
            android:layout_width="@dimen/fragment_logo_width"
            android:layout_height="@dimen/fragment_logo_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo"
            android:layout_margin="@dimen/smallest_margin"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_text"
            style="@style/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo_image"
            android:text="@string/settings_section"
            android:textSize="@dimen/big_text"/>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            style="@style/default_text"
            android:textSize="@dimen/normal_text"
            android:text="@string/my_profile"
            android:layout_marginTop="@dimen/smallest_margin" />

        <ImageView
            android:id="@+id/profile_arrow"
            android:layout_width="@dimen/news_fragment_add_image_side"
            android:layout_height="@dimen/news_fragment_add_image_side"
            app:layout_constraintStart_toEndOf="@id/profile_text"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintBottom_toTopOf="@id/view_2"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginStart="@dimen/smallest_margin"/>

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/profile_text"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <TextView
            android:id="@+id/interests_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            style="@style/default_text"
            android:textSize="@dimen/normal_text"
            android:text="@string/my_interests"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <ImageView
            android:id="@+id/interests_arrow"
            android:layout_width="@dimen/news_fragment_add_image_side"
            android:layout_height="@dimen/news_fragment_add_image_side"
            app:layout_constraintStart_toEndOf="@id/interests_text"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            app:layout_constraintBottom_toTopOf="@id/view_3"
            android:src="@drawable/ic_arrow_right"/>

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/interests_text"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <TextView
            android:id="@+id/theme_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_3"
            style="@style/default_text"
            android:textSize="@dimen/normal_text"
            android:text="@string/app_theme"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/theme_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/theme_text"/>

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/theme_switch"/>

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_4"
            style="@style/default_text"
            android:textSize="@dimen/normal_text"
            android:text="@string/logout"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <ImageView
            android:id="@+id/logout_image"
            android:layout_width="@dimen/news_fragment_add_image_side"
            android:layout_height="@dimen/news_fragment_add_image_side"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logout_text"
            android:src="@drawable/ic_logout"/>

        <View
            android:id="@+id/view_5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/logout_image"
            android:layout_marginTop="@dimen/smallest_margin"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/loading"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>