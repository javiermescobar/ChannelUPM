<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ChannelUPM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lighter_grey</item>
        <item name="colorPrimaryVariant">@color/light_grey </item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryInverse">@color/dark_grey</item>
    </style>

    <style name="default_text">
        <item name="android:textColor">?attr/colorPrimaryInverse</item>
        <item name="fontFamily">@font/steinem_font</item>
    </style>

    <style name="category_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="error_dialog">
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:width">200dp</item>
        <item name="android:height">300dp</item>
    </style>

    <style name="default_switch" parent="Theme.ChannelUPM">
        <item name="colorControlActivated">@color/blue</item>
    </style>
</resources>